---
layout: layout.njk
---

<article class="post">
  <a href="{{post.url}}" class="post__date">
    <time datetime="{{post.date | isoDate}}">{{post.date | readableDate}}</time>
  </a>
  {% if post.editDate %}
  <span class="post__editdate">
    Edited on <time datetime="{{post.editDate | isoDate}}">{{post.editDate | readableDate}}</time>
  </span>
  {% endif %}

  <h1 class="post__title">{{post.title}}</h1>
  <p class="post__summary">{{post.summary}}</p>

  <div class="post__content">
    {{content | safe}}
  </div>
</article>

<nav>
  {% if pagination.href.next %}
    <a class="nav nav--prev" href="{{pagination.href.next}}">{{pagination.page.next.title}}</a>
  {% endif %}
  {% if pagination.href.previous %}
    <a class="nav nav--next" href="{{pagination.href.previous}}">{{pagination.page.previous.title}}</a>
  {% endif %}
</nav>
